{
    "name": "kyrne/evergreen",
    "description": "1 level reply trees for Flarum.",
    "keywords": [
        "flarum",
		"reply",
		"tree"
    ],
    "type": "flarum-extension",
    "license": "GPL-3.0-or-later",
    "require": {
        "flarum/core": "^1.0.2"
    },
    "conflict": {
        "flarum/mentions": "*"
    },
    "authors": [
        {
            "name": "Charlie K",
            "email": "charlie.k@redevs.org",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kyrne\\Evergreen\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Evergreen",
            "icon": {
                "name": "fas fa-tree",
                "background": "linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(224,64,251,1) 0%, rgba(33,150,243,1) 100%)",
                "color": "#FFF"
            }
        }
    }
}
