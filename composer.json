{
    "name": "kyrne/evergreen",
    "description": "1 level reply trees for Flarum.",
    "keywords": [
        "flarum",
		"reply",
		"tree"
    ],
    "type": "flarum-extension",
    "license": "GPL-3.0-or-later",
    "require": {
        "flarum/core": "^0.1.0-beta-13",
        "kyrne/ext-core": "*@dev"
    },
    "conflict": {
        "flarum/mentions": "*"
    },
    "authors": [
        {
            "name": "Charlie K",
            "email": "charlie.k@redevs.org",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kyrne\\Evergreen\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Evergreen",
            "icon": "fas fa-tree",
            "info": {
                "link": "https://discuss.flarum.org/d/24695-evergreen-comment-trees-for-flarum",
                "location": "Flarum Commmunity"
            },
            "extra": {
                "icon": "fab fa-github",
                "link": "https://github.com/kyrnedev/evergreen",
                "title": "Source",
                "location": "Github"
            }
